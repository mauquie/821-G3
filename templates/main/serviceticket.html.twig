<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.nicescroll/3.6.8-fix/jquery.nicescroll.min.js"></script>
<div class="content container-fluid bootstrap snippets">
      <div class="row row-broken">
        <div class="col-sm-12 col-xs-12 chat" style="outline: none;" tabindex="5001">
          <div class="col-inside-lg decor-default">
          

			<div class="chat-body">
		{% for openticket in opentickets %}

		{% if openticket.name == "service@troubleshooting.com" %}		
				<div class="answer right">
		{% else %}
				<div class="answer left">
		{% endif %}
               <div class="avatar">
                 <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="User name">
                 <div class="status offline"></div>
               </div>
               <div class="name">{{ openticket.name }}</div>
               <div class="text">
                 {{openticket.text}}
               </div>
              </div>
		{% endfor %}




				{{ form_start(form) }}

				{{ form_row(form.text, { 'attr': {'placeholder':'Ecrire un message...', 'class':'form-control'} }) }}
				<button type="submit" class="btn btn-success">Envoyer le message</button>
				{{ form_end(form) }}	
				
				
				{% for ticketlist in ticketlists %}
					{% if ticketlist.tag == tag %}
						{% if ticketlist.status == "open" %}
							{{ form_start(formTicketList) }}
								{{ form_row(formTicketList.status, { 'attr': {'value':'close'} }) }}
								<p>Le client est-il satisfaits ?</p>
								{{ form_row(formTicketList.result) }}
								<button type="submit" class="btn btn-danger">Fermer le ticket</button>
							{{ form_end(formTicketList) }}
						{% else %}
							{{ form_start(formTicketList) }}
								{{ form_row(formTicketList.status, { 'attr': {'value':'open'} }) }}				
								{{ form_row(formTicketList.result, {'attr':{'style':'display:none;', 'value':'none'} }) }}
								<button type="submit" class="btn btn-warning">Ouvrir le ticket</button>
							{{ form_end(formTicketList) }}
						{% endif %}
					{% endif %}
				{% endfor %}		
				

					

            </div>
          </div>
        </div>

