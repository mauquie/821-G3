{% extends 'base.html.twig' %} 

{% block title %}Troubleshooting - Dépannage informatique en ligne{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    {% if app.user %}
		{{ form_start(form) }}

			{{ form_row(form.title, { 'attr': {'placeholder':'Titre...', 'class':'form-control'} }) }}

			{{ form_row(form.description, { 'attr': {'placeholder':'Décrivez votre problème...', 'class':'form-control'} }) }}


			<button type="submit" class="btn btn-success">Envoyer le formulaire</button>

		{{ form_end(form) }}
    {% else %}
    <p>Vous devez être connecté pour faire une demande de ticket</p><a href="{{ path('security_login') }}">se connecter</a>
    {% endif %}


{% endblock %}
